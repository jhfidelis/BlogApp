{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova postagem:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="nome">Título:</label>
            <input type="text" name="titulo"class="form-control" placeholder="Título da Postagem">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" placeholder="Slug da Pòstagem">

            <label for="descrição">Descrição:</label>
            <input type="text" name="descricao" class="form-control" placeholder="Descrição da Postagem">

            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control"></textarea>

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria encontrada!</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4">Adicionar Postagem</button>
        </form>
    </div>
</div>